<main>
  <p style="color: green"><%= notice %></p>

  <div>
    <%= link_to "Back to recipes", recipes_path %>
  </div>

  <%= render @recipe %>

  <section>
    <% if can? :toggle_public, @recipe %>
      <% if @recipe.public %>
        <%= button_to 'Make Private', toggle_public_recipe_path(@recipe), method: :patch %>
      <% else %>
        <%= button_to 'Make Public', toggle_public_recipe_path(@recipe), method: :patch %>
      <% end %>
    <% end %>
  </section>
  <section class="recipe_detail">
    <p> Preparation Time: <%= @recipe.preparation_time %> hour </p>
    <p> Cooking Time: <%= @recipe.cooking_time %> hour </p>
    <p>Procedure: <br/> <%= @recipe.description %> </p>
  </section>
  <section class="actions_container">
    <%= link_to 'Generate Shop List', users_shopping_list_path, class: 'action_link' %>
    <% if @recipe.user == current_user %>
      <%= link_to 'Add Ingredient', new_recipe_recipe_food_path(@recipe), class: 'action_link' %>
    <% end %>
  </section>
  <table class="food-table">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe.recipe_foods.includes(:food).each do |recipe_food| %>
        <% food = recipe_food.food %>
        <tr>
          <td><%= food.name %></td>
          <td><%= recipe_food.quantity %></td>
          <td>$<%= food.price * recipe_food.quantity %></td>
          <td>
            <%= link_to 'Modify', '#', class: 'action_link' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</main>
